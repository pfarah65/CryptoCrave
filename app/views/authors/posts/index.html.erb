<% provide(:page_title,"All Posts")%>
<% provide(:author,"active")%>


<div class = "row">
  <% if flash.any? %>
    <% flash.keys.each do |key| %>

      <div class="alert alert-<%= key.to_s %>" role="alert">
        <%= flash[key] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  <% end %>

	<div>
		<%= link_to "New Post", new_authors_post_path, class:"btn btn-primary btn-lg"%>
	</div>
	<br>
	<table class="table table-striped">	
  		<tr>
  			<th colspan="5">Title</th>
  		</tr>
  		<%= render @posts%>
	</table>

</div>
