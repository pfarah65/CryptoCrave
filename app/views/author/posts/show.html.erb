<% provide(:page_title,@post.title)%>
<% provide(:blog_active,"active")%>


<div>
	<%= link_to "Edit",edit_author_post_path(@post), class :"btn btn_sm btn-warning"%>
	<%= link_to "Remove",author_post_path(@post),method:
   :delete, data: {confirm: "Are you sure?"},
   class:"btn btn_sm btn-danger:"%>
</div>

<div class="row">
	<div class="col-md-10 offset-md-1 col-lg-12 offset-lg-2 text-xs-center">
		<h1><%= @post.title %></h1>
		<p><%= @post.display_day_published %></p>
		<%= @post.body %>
	</div>
</div>
