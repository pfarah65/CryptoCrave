<% provide(:page_title,@post.title)%>
<% provide(:blog_active,"active")%>

<div class="row">
	<div class ="col-md-1 col-lg-2"></div>
		<div class="col-md-10 col-lg-12 text-xs-center">
			<h1><%= @post.title %></h1>
			<h6><%= @post.display_day_published %></h6>
			<% if @post.body!=nil%>
				<%= @post.body.html_safe %>
			<%end%>
	</div>


</div>
<hr>
<div class="row row-author">
	<h2><center>Author</center></h2>
	<hr>
	<div class="col-md-12 col-lg-12 ">
		<div class="center">	
			<div class="author-bio">
				<h4><%= @post.author.name %></h4>
				<%= image_tag(@post.author.gravatar_image_url) %>
				<h6><%= @post.author.bio %></h6>
			</div>
		</div>
	</div>	
</div>

	



